@{
    Layout = null;
}

<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
<style type="text/css">
    :-webkit-full-screen video {
        width: 100%;
        height: 100%;
    }
    input[type=button] {
        border-radius: 3px;
    }
    td, tr {
        margin: 5px 5px;
    }
</style>

<script src="~/Scripts/Video/PlayerFn.js" type="text/javascript"></script>
@Html.Partial("Video")

<div id="controller" style="margin: 5px 5px;">
    <input type="button" value="Play" onclick="video_start()" />
    <input type="button" value="II" onclick="video_stop()" />
    <input type="button" value="volume +" onclick="video_volume_add()" />
    <input type="button" value="volume -" onclick="video_volume_sub()" />
    <input type="button" value="faster" onclick="video_rate_add()" />
    <input type="button" value="slower" onclick="video_rate_sub()" />
</div>

<table style="margin: 5px 5px;">
    <tr>
        <td>Playback Rate</td>
        <td id="playbackrate"></td>
    </tr>
    <tr>
        <td>Duration</td>
        <td id="duration"></td>
    </tr>
    <tr>
        <td>Current Time</td>
        <td id="currenttime"></td>
    </tr>
    <tr>
        <td>Volume</td>
        <td id="volume"></td>
    </tr>
</table>
